<Window
    x:Class="PhraseFinder.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:PhraseFinder.WPF.ViewModels"
    Title="Almacenador de expresiones y locuciones"
    Width="800"
    Height="600"
    d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
    xml:lang="es-ES"
    mc:Ignorable="d">

    <ContentControl Content="{Binding Navigation.CurrentViewModel, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />

</Window>