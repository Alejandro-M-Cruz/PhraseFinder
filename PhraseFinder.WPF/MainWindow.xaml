                <DataGridTextColumn Header="Nombre" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Ruta" Binding="{Binding Path}"/>
            </DataGrid.Columns>
        </DataGrid>-->
    </Grid>
</Window>
