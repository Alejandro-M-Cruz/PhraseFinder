@{
	var currentPage = ViewContext.RouteData.Values["Page"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Detector de exprs. y locs.</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
<header class="fixed-top">
	<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
		<div class="container">
			<a class="navbar-brand" asp-area="" asp-page="/Index">
				<span class="d-none d-sm-inline">
					Detector de expresiones y locuciones
				</span>
				<span class="d-sm-none">
					Detector de 
					<abbr class="text-decoration-none" title="expresiones">expr.</abbr> 
					y 
					<abbr class="text-decoration-none" title="locuciones">loc.</abbr>
				</span>
			</a>
			<button 
				class="navbar-toggler" 
				type="button" 
				data-bs-toggle="collapse" 
				data-bs-target=".navbar-collapse" 
				aria-controls="navbarSupportedContent"
				aria-expanded="false" 
				aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
				<ul class="navbar-nav flex-grow-1">
					<li class="nav-item">
						<a class="nav-link ms-4 @(currentPage == "/Index" ? "active" : "")" asp-page="/Index">
							Introducir un texto
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link ms-4 @(currentPage == "/FileInput" ? "active" : "")" asp-page="/FileInput">
							Seleccionar un fichero
						</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>
</header>

<div class="container">
	<main role="main" class="pb-3">
		@RenderBody()
	</main>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>