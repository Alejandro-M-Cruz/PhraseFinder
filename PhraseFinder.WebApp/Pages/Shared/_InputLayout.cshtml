@{
	Layout = "_Layout";
	var currentPage = ViewContext.RouteData.Values["Page"]?.ToString();
	var isIndexActive = currentPage == "/Index";
}


<div class="container">
	<h1 class="mb-5">Texto a examinar</h1>
	
	<div class="card">
		<ul class="card-header nav nav-tabs justify-content-center pb-0" role="tablist">
			<li class="nav-item">
				<a class="nav-link @(isIndexActive ? "active" : "")" asp-page="/Index" role="tab">Introducir un texto</a>
			</li>
			<li class="nav-item">
				<a class="nav-link @(isIndexActive ? "" : "active")" asp-page="/FileInput" role="tab">Seleccionar un fichero</a>
			</li>
		</ul>
		<div class="card-body">
			@RenderBody()
		</div>
	</div>
</div>

@section Scripts {
	@{
		<partial name="Shared/_ValidationScriptsPartial" />
	}
}
