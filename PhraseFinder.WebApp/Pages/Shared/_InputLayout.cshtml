@{
	Layout = "_Layout";
	var currentPage = ViewContext.RouteData.Values["Page"]?.ToString();
}


<div class="container">
	<h1 class="mb-5">Texto a examinar</h1>
	
	<div class="card">
		<ul class="card-header nav nav-tabs justify-content-center pb-0" role="tablist">
			<li class="nav-item">
				<a class="nav-link @(currentPage == "/Index" ? "active" : "")" asp-page="/Index" role="tab">
					<span class="d-none d-sm-inline">Introducir un texto</span>
					<span class="d-sm-none">Texto</span>
				</a>
			</li>
			<li class="nav-item">
				<a class="nav-link @(currentPage == "/FileInput" ? "active" : "")" asp-page="/FileInput" role="tab">
					<span class="d-none d-sm-inline">Seleccionar un fichero</span>
					<span class="d-sm-none">Fichero</span>
				</a>
			</li>
		</ul>
		<div class="card-body">
			@RenderBody()
		</div>
	</div>
</div>

@section Scripts {
	@{
		<partial name="Shared/_ValidationScriptsPartial" />
	}
}
